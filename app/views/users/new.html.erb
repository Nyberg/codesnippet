

<div class="row">
  <div class="col-md-12">
  <h1>New User</h1>
    <%= form_for(@user) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
      </div>

      <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email %>
      </div>

      <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
      </div>

	<div class="form-group">
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
	</div>
	
	<div class="form-group">
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    </div>
    
    <% end %>
 
  </div>
</div>

<%= link_to 'Back', users_path %>
