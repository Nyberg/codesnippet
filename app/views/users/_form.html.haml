= form_for(@user) do |f|
  -if @user.errors.any?
    .error_explanation
      %ul
        = @user.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.text_field :name, placeholder: 'namn', class: 'form-control'

  .form-group
    = f.text_field :email, placeholder: 'email', class: 'form-control'

  .form-group
    = f.collection_select(:club_id, Club.all, :id, :name, class: 'form-control')

  .form-group
    = f.submit :Spara, class: 'btn btn-sm btn-primary'
