<p id="notice"><%= notice %></p>

<h1>Listing Holes</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Number</th>
      <th>Par</th>
      <th>Length</th>
      <th>Tee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holes.each do |hole| %>
      <tr>
        <td><%= hole.course_id %></td>
        <td><%= hole.number %></td>
        <td><%= hole.par %></td>
        <td><%= hole.length %></td>
        <td><%= hole.tee_id %></td>
        <td><%= link_to 'Show', hole %></td>
        <td><%= link_to 'Edit', edit_hole_path(hole) %></td>
        <td><%= link_to 'Destroy', hole, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

