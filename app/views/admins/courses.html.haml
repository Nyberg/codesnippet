%header.masthead
  .container
    .row.page_header.admin
      .col-md-4
        %h1 Banor

      .col-md-8#leftCol
        %ul.nav.nav-tabs.pull-right
          %li
            = link_to (fa_icon "plus", text: "Ny bana"), new_course_path

    .row.spacing
      = render :partial => 'admins/partials/menu'

      .col-md-10
        %table.table.table-hover
          %thead
            %th Namn
            %th Klubb
            %th Antal h√•l
            %th Tee(s)
            %th Actions
          %tbody
            - @courses.each do |u|
              %tr
                %td= link_to u.name, course_path(u)
                %td= u.club.name
                %td= u.holes
                %td
