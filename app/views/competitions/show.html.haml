%header.masthead
  .container
    .row
      .col-md-6
        %h1= @competition.name
        %small= "#{@competition.club.name} - #{@competition.title}"

    .row
      .col-md-12
        %h3
        - @competition.tour_parts.each do |t|
          %p= "#{t.name} - #{t.date.strftime("%Y-%m-%-d")}"
          %table.table.table-striped
            %tbody
              %tr
                %td= "#{t.tee.color} tee"
                %td= "Par #{t.tee.par}"
              %tr
                %td Nr/par
                - t.tee.holes.each do |h|
                  %td.text-center= h.number
                %td
              - t.rounds.each do |r|
                %tr
                  %td= r.user.name
                  - r.scores.each do |s|
                    %td{class: "#{get_score(s.score, s.hole.par)} text-center"}= "#{s.score} (#{s.hole.par})"
                  %td= r.score
              %tr
                %td LÃ¤ngd
                - t.tee.holes.each do |h|
                  %td.text-center= "#{h.length} m"
                %td
