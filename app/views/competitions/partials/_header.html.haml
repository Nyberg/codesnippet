.container
  .row.spacing.page_header.normal
    .col-md-4
      %h1= @heading
      %small Här kan du se statistik för varje enskild deltväling.
      -# %span= fa_icon "tags", class: "black"
      -# - @competition.tag_list.each do |tag|
      -#   %span.tag= link_to tag, competitions_path(term: tag)


    .col-md-8#leftCol
      %ul.nav.nav-tabs.pull-right
        %li
          = link_to (fa_icon "home", text: t(:Home)), competition_path(@competition), class: (title == t(:Home) ? 'active' : '')
        %li
          = link_to (fa_icon "info", text: t(:Tour_parts)), competition_tours_path(id: @competition), class: (title == t(:Tour_parts) ? 'active' : '')
        %li
          = link_to (fa_icon "trophy", text: t(:Overall_standings)), competition_totals_path(id: @competition.id), class: (title == t(:Overall_standings) ? 'active' : '')
        %li
          = link_to (fa_icon "bullseye", text: t(:Record_rounds)), competition_records_path(id: @competition.id), class: (title == t(:Record_rounds) ? 'active' : '')
        %li
          = link_to (fa_icon "area-chart", text: t(:Statistics)), competition_statistics_path(id: @competition.id), class: (title == t(:Statistics) ? 'active' : '')
