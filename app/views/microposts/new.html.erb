<h3>New Micropost</h3>

<%= form_for(@micropost) do |f| %>
<div class="form-group">
  <%= f.label :heading %><br> 
  <%= f.text_field :heading %>
</div>

<div class="form-group">
<%= f.label :code %><br>
<%= f.text_area :content %>
</div>

<div class="form-group">
<%= f.label :desc %><br>
<%= f.text_area :desc %>
</div>

<div class="form-group">
<%= f.label :category %><br>
<%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: false %>
</div>

<%= f.hidden_field :user_id, :value => current_user.id %>

<div class="form-group">
<%= f.submit "Save" %>
</div>
<% end %>


<%= link_to 'Back', microposts_path %>
